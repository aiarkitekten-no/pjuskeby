{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://pjuskeby.org/schemas/street.schema.json",
  "title": "Street",
  "description": "En gate i Pjuskeby",
  "type": "object",
  "required": ["id", "slug", "name", "created_at", "updated_at", "status"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unik UUID for gaten"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$",
      "description": "URL-safe slug"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Gatenavn"
    },
    "name_variants": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Alternative navn/stavem√•ter for mapping"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Beskrivelse av gaten"
    },
    "geo": {
      "type": ["object", "null"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["LineString"]
        },
        "coordinates": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          }
        }
      },
      "description": "GeoJSON LineString for gaten"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["active", "inactive", "archived"]
    }
  }
}
