---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { readFile } from 'fs/promises';
import { join } from 'path';
import { calculateTrendingScore } from '../../utils/trending';

// Read rumors data
const rumorsData = JSON.parse(
  await readFile(join(process.cwd(), 'content/data/rumors.normalized.json'), 'utf-8')
);

const rumors = rumorsData.rumors;

// Calculate stats
const totalRumors = rumors.length;
const totalViews = rumors.reduce((sum, r) => sum + (r.interactions?.views || 0), 0);
const totalConfirmed = rumors.reduce((sum, r) => sum + (r.interactions?.confirmed || 0), 0);
const totalDebunked = rumors.reduce((sum, r) => sum + (r.interactions?.debunked || 0), 0);
const totalShared = rumors.reduce((sum, r) => sum + (r.interactions?.shared || 0), 0);

// Category breakdown
const categoryStats = {};
rumors.forEach(r => {
  if (!categoryStats[r.category]) {
    categoryStats[r.category] = { count: 0, views: 0 };
  }
  categoryStats[r.category].count++;
  categoryStats[r.category].views += (r.interactions?.views || 0);
});

// Source type breakdown
const sourceStats = {};
rumors.forEach(r => {
  if (!sourceStats[r.sourceType]) {
    sourceStats[r.sourceType] = { count: 0, avgCredibility: 0, total: 0 };
  }
  sourceStats[r.sourceType].count++;
  sourceStats[r.sourceType].total += r.credibility;
});
Object.keys(sourceStats).forEach(key => {
  sourceStats[key].avgCredibility = Math.round(sourceStats[key].total / sourceStats[key].count);
});

// Top 5 most viewed
const mostViewed = [...rumors]
  .sort((a, b) => (b.interactions?.views || 0) - (a.interactions?.views || 0))
  .slice(0, 5);

// Top 5 most confirmed
const mostConfirmed = [...rumors]
  .sort((a, b) => (b.interactions?.confirmed || 0) - (a.interactions?.confirmed || 0))
  .slice(0, 5);

// Top 5 trending
const trending = [...rumors]
  .map(r => ({ ...r, trendingScore: calculateTrendingScore(r) }))
  .sort((a, b) => b.trendingScore - a.trendingScore)
  .slice(0, 5);

// Character mentions
const characterMentions = {};
rumors.forEach(r => {
  r.characters?.forEach(char => {
    characterMentions[char] = (characterMentions[char] || 0) + 1;
  });
});
const topCharacters = Object.entries(characterMentions)
  .sort((a, b) => b[1] - a[1])
  .slice(0, 5);

// Location mentions
const locationMentions = {};
rumors.forEach(r => {
  r.locations?.forEach(loc => {
    locationMentions[loc] = (locationMentions[loc] || 0) + 1;
  });
});
const topLocations = Object.entries(locationMentions)
  .sort((a, b) => b[1] - a[1])
  .slice(0, 5);
---

<BaseLayout 
  title="Rykter Statistikk | Pjuskeby"
  description="Se statistikk og trender for rykter i Pjuskeby"
>
  <div style="max-width: 1200px; margin: 0 auto; padding: 2rem;">
    <!-- Header -->
    <div style="margin-bottom: 3rem;">
      <h1 style="font-size: 2.5rem; font-weight: 700; color: #1e293b; margin-bottom: 0.5rem;">
        📊 Rykter Statistikk
      </h1>
      <p style="color: #64748b; font-size: 1.125rem;">
        Oversikt over rykter, trender og engasjement i Pjuskeby
      </p>
    </div>

    <!-- Overview Stats -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1.5rem; margin-bottom: 3rem;">
      <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 1.5rem; border-radius: 12px; color: white;">
        <div style="font-size: 0.875rem; opacity: 0.9; margin-bottom: 0.5rem;">Totalt Rykter</div>
        <div style="font-size: 2.5rem; font-weight: 700;">{totalRumors}</div>
      </div>
      
      <div style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); padding: 1.5rem; border-radius: 12px; color: white;">
        <div style="font-size: 0.875rem; opacity: 0.9; margin-bottom: 0.5rem;">Totale Visninger</div>
        <div style="font-size: 2.5rem; font-weight: 700;">{totalViews}</div>
      </div>
      
      <div style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); padding: 1.5rem; border-radius: 12px; color: white;">
        <div style="font-size: 0.875rem; opacity: 0.9; margin-bottom: 0.5rem;">Bekreftelser</div>
        <div style="font-size: 2.5rem; font-weight: 700;">{totalConfirmed}</div>
      </div>
      
      <div style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); padding: 1.5rem; border-radius: 12px; color: white;">
        <div style="font-size: 0.875rem; opacity: 0.9; margin-bottom: 0.5rem;">Delinger</div>
        <div style="font-size: 2.5rem; font-weight: 700;">{totalShared}</div>
      </div>
    </div>

    <!-- Two Column Layout -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(400px, 1fr)); gap: 2rem;">
      
      <!-- Trending Rumors -->
      <section style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <h2 style="font-size: 1.5rem; font-weight: 700; color: #1e293b; margin-bottom: 1.5rem; display: flex; align-items: center; gap: 0.5rem;">
          🔥 Trending Nå
        </h2>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
          {trending.map((rumor, i) => (
            <a href={`/rykter/${rumor.id}`} style="display: block; padding: 1rem; background: #f8fafc; border-radius: 8px; text-decoration: none; color: inherit; transition: all 0.2s;">
              <div style="display: flex; align-items: start; gap: 1rem;">
                <div style="font-size: 1.5rem; font-weight: 700; color: #f59e0b; min-width: 2rem;">#{i + 1}</div>
                <div style="flex: 1;">
                  <div style="font-weight: 600; color: #1e293b; margin-bottom: 0.25rem;">{rumor.title}</div>
                  <div style="font-size: 0.875rem; color: #64748b;">
                    Score: {Math.round(rumor.trendingScore)} | {rumor.interactions?.views || 0} visninger
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Most Viewed -->
      <section style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <h2 style="font-size: 1.5rem; font-weight: 700; color: #1e293b; margin-bottom: 1.5rem;">
          👀 Mest Leste
        </h2>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
          {mostViewed.map((rumor, i) => (
            <a href={`/rykter/${rumor.id}`} style="display: block; padding: 1rem; background: #f8fafc; border-radius: 8px; text-decoration: none; color: inherit;">
              <div style="display: flex; align-items: start; gap: 1rem;">
                <div style="font-size: 1.5rem; font-weight: 700; color: #3b82f6; min-width: 2rem;">#{i + 1}</div>
                <div style="flex: 1;">
                  <div style="font-weight: 600; color: #1e293b; margin-bottom: 0.25rem;">{rumor.title}</div>
                  <div style="font-size: 0.875rem; color: #64748b;">
                    {rumor.interactions?.views || 0} visninger
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Category Breakdown -->
      <section style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <h2 style="font-size: 1.5rem; font-weight: 700; color: #1e293b; margin-bottom: 1.5rem;">
          📂 Kategorier
        </h2>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
          {Object.entries(categoryStats).map(([category, stats]) => (
            <div style="padding: 1rem; background: #f8fafc; border-radius: 8px;">
              <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
                <span style="font-weight: 600; color: #1e293b; text-transform: capitalize;">{category}</span>
                <span style="font-weight: 700; color: #3b82f6;">{stats.count}</span>
              </div>
              <div style="font-size: 0.875rem; color: #64748b;">
                {stats.views} visninger totalt
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Source Types -->
      <section style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <h2 style="font-size: 1.5rem; font-weight: 700; color: #1e293b; margin-bottom: 1.5rem;">
          🗣️ Kildetyper
        </h2>
        <div style="display: flex; flex-direction: column; gap: 1rem;">
          {Object.entries(sourceStats).map(([source, stats]) => (
            <div style="padding: 1rem; background: #f8fafc; border-radius: 8px;">
              <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 0.5rem;">
                <span style="font-weight: 600; color: #1e293b; text-transform: capitalize;">{source}</span>
                <span style="font-weight: 700; color: #3b82f6;">{stats.count}</span>
              </div>
              <div style="font-size: 0.875rem; color: #64748b;">
                Gjennomsnitt troverdighet: {stats.avgCredibility}%
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Top Characters -->
      <section style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <h2 style="font-size: 1.5rem; font-weight: 700; color: #1e293b; margin-bottom: 1.5rem;">
          👤 Mest Omtalte Personer
        </h2>
        <div style="display: flex; flex-direction: column; gap: 0.75rem;">
          {topCharacters.map(([name, count], i) => (
            <div style="display: flex; align-items: center; gap: 1rem; padding: 0.75rem; background: #f8fafc; border-radius: 8px;">
              <div style="font-size: 1.25rem; font-weight: 700; color: #8b5cf6; min-width: 2rem;">#{i + 1}</div>
              <div style="flex: 1; font-weight: 600; color: #1e293b;">{name}</div>
              <div style="font-weight: 700; color: #64748b;">{count} rykter</div>
            </div>
          ))}
        </div>
      </section>

      <!-- Top Locations -->
      <section style="background: white; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
        <h2 style="font-size: 1.5rem; font-weight: 700; color: #1e293b; margin-bottom: 1.5rem;">
          📍 Mest Omtalte Steder
        </h2>
        <div style="display: flex; flex-direction: column; gap: 0.75rem;">
          {topLocations.map(([name, count], i) => (
            <div style="display: flex; align-items: center; gap: 1rem; padding: 0.75rem; background: #f8fafc; border-radius: 8px;">
              <div style="font-size: 1.25rem; font-weight: 700; color: #10b981; min-width: 2rem;">#{i + 1}</div>
              <div style="flex: 1; font-weight: 600; color: #1e293b;">{name}</div>
              <div style="font-weight: 700; color: #64748b;">{count} rykter</div>
            </div>
          ))}
        </div>
      </section>
    </div>

    <!-- Back link -->
    <div style="margin-top: 3rem; text-align: center;">
      <a href="/rykter" style="display: inline-block; padding: 0.75rem 1.5rem; background: #3b82f6; color: white; text-decoration: none; border-radius: 6px; font-weight: 600;">
        ← Tilbake til Rykter
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  a:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0,0,0,0.15) !important;
  }
</style>
