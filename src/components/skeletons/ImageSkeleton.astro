---
interface Props {
  width?: string;
  height?: string;
  class?: string;
}

const { width = '100%', height = '200px', class: className = '' } = Astro.props;
---

<div class={`image-skeleton animate-pulse ${className}`} style={`width: ${width}; height: ${height};`}>
  <div class="skeleton-placeholder">
    <svg width="48" height="48" viewBox="0 0 24 24" fill="currentColor">
      <path d="M21 19V5c0-1.1-.9-2-2-2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2zM8.5 13.5l2.5 3.01L14.5 12l4.5 6H5l3.5-4.5z"/>
    </svg>
  </div>
</div>

<style>
  .image-skeleton {
    background: #e2e8f0;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #94a3b8;
  }
  
  .skeleton-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.5;
  }
  
  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>
